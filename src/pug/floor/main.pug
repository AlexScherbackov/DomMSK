	- infoBuild = [{text: 'Класс жилья', val: 'Комфорт-класс'},{text: 'Тип здания', val: 'Кирпичный'},{text: 'Этажность', val: '2-7'},{text: 'Лифт', val: 'да'},{text: 'Паркинг', val: 'Подземный паркинг: 194 м/места'},{text: 'Отделка', val: 'С отделкой и без'},{text: 'Цена за м2', val: '59 000 руб.'},{text: 'Дата сдачи', val: '4кв 2013 г.'}]
