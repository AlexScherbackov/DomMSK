									div.short-post__poster.short-post__poster--extra-small
										img(src=item.img)
									div.short-post__content
										p.short-post__string=item.title
										p.short-post__string.short-post__string--shadow=item.text
									
						div.bilders-banks
							h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb.main-section__title--mb Ипотечные банки
							each item in banks
								div.short-post.short-post--xs-row
									div.short-post__poster.short-post__poster--extra-small
										img(src=item.img)
									div.short-post__content
										p.short-post__string=item.title
										p.short-post__string.short-post__string--shadow=item.text
