main.main-section
	div.container
		div.main-section__wrapper
			header.main-section__header
				h2.base-title.base-title--type2.base-title--black.main-section__title 
					span.fas.fa-th-large.base-title__icon
					span Планировки
				div.main-section__gallery.gallery
					each item in gallery
						a.gallery__item(href=item.href)
							img.gallery__poster(src=item.img)
							div.gallery__title
								div.gallery__text-wrap
									span=item.title1
									span=item.title2
			div.main-section__aside
				ul.main-section__sidebar-menu.sidebar-menu
					each item in sidebar
						li.sidebar-menu__item
							div.sidebar-menu__row
								span(class=item.icon)
								span.sidebar-menu__title=item.title
								span.sidebar-menu__arrow
							if(item.sub)
								ul.sidebar-menu__submenu.sidebar-submenu
									each elem in item.sub
										li.sidebar-submenu__list-item
											
											if(elem.list)
												div.sidebar-menu__row.sidebar-menu__row--fs
													span.sidebar-submenu__list-link=elem.title
													span.sidebar-menu__arrow.sidebar-menu__arrow--sub
												ul.sidebar-submenu__sub.sidebar-sub
													each value in elem.list
														li.sidebar-sub__list-item
															span -
															a.sidebar-sub__list-link(href=value.href)=value.title
											else
												span.sidebar-submenu__list-header=elem.title

							
			div.main-section__content
				h2.base-title.base-title--type2.base-title--black.main-section__title Новостройки Москвы и Московской области на карте
				div.content__map
				h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Новости
				div.content__short-post
					each item in sortPosts
						div.short-post
							div.short-post__poster
								img(src=item.img)
							div.short-post__content
								h4.short-post__title=item.title
								span.short-post__date=item.date
								p.short-post__text=item.text
								a.short-post__link(href=item.link) 
									span Подробнее
									span.content__arrow

					a.content__btn(href="/") 
						span Все новости
						span.content__arrow
				h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Популярные новостройки
				div.content__posts
					div.content__post-card
						each item in postCards
							a.post-card(href=item.href)
								div.post-card__poster
									img.post-card__img(src=item.img)
									span.post-card__title=item.title
								div.post-card__content
									p.post-card__location
										span.fas.fa-map-marker.post-card__icon.post-card__icon--blue
										span=item.loc
									div.post-card__row
										div.post-card__row-item
											span.post-card__icon.post-card__icon--red
												+svg('metro')
											span.post-card__text=item.subStatio
										div.post-card__row-item
											case item.subType
												when 'bus'
													span.post-card__icon.post-card__icon--blue
														+svg('bus')
													span.post-card__text=item.subTime
												when 'step'
													span.post-card__icon.post-card__icon--blue
														+svg('step')
													span.post-card__text=item.subTime
									div.post-card__row
										div.post-card__row-item
											span.post-card__text.post-card__text--shadow Сдача
										div.post-card__row-item
											span.post-card__text=item.release
									div.post-card__row.post-card__row--no-mt
										div.post-card__row-item
											span.post-card__text.post-card__text--shadow Застройщик
										div.post-card__row-item
											span.post-card__text=item.builder
									div.post-card__row
										div.post-card__delimiter
									div.post-card__row
										span.post-card__text.post-card__text--big Планировки:
									each elem in item.flors
