block content	
	main.main-section
		div.container
			div.main-section__wrapper
				header.main-section__header
					h2.base-title.base-title--type2.base-title--black.main-section__title 
						span.fas.fa-th-large.base-title__icon
						span Планировки
					div.main-section__gallery.gallery
						each item in gallery
							a.gallery__item(href=item.href)
								img.gallery__poster(src=item.img)
								div.gallery__title
									div.gallery__text-wrap
										span=item.title1
										span=item.title2
				block content
					include asets/sidebar.pug

							
				div.main-section__content
					h2.base-title.base-title--type2.base-title--black.main-section__title Новостройки Москвы и Московской области на карте
					div.content__map
					h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Новости
					div.content__short-post
						each item in sortPosts
							div.short-post
								div.short-post__poster
									img(src=item.img)
								div.short-post__content
									h4.short-post__title=item.title
									span.short-post__date=item.date
									p.short-post__text=item.text
									a.short-post__link(href=item.link) 
										span Подробнее
										span.content__arrow

						a.content__btn(href="/") 
							span Все новости
							span.content__arrow
					h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Популярные новостройки
					div.content__posts
						div.content__post-card
							each item in postCards
								+post-card(item.href, item.poster, false, item.location, item.builder, item.floors)
						a.content__btn(href="/") 
							span Все популярные новостройки
							span.content__arrow
					h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Новые новостройки
					div.content__posts
						div.content__post-card
							each item in postCards
								+post-card(item.href, item.poster, false, item.location, item.builder, item.floors)
						a.content__btn(href="/") 
							span Все популярные новостройки
							span.content__arrow
					h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Дешевые новостройки
					div.content__small-bar
						div.small-bar__content
							each item in cheapBuilding
								div.short-post.short-post--md-fs.short-post--xs-row
									div.short-post__poster.short-post__poster--small
										img(src=item.img)
									div.short-post__content
										a.short-post__string.short-post__head-link(href=item.href)=item.title
										p.short-post__string=item.adress
										p.short-post__string=item.price
						div.small-bar__advertising
					h2.base-title.base-title--type2.base-title--black.main-section__title.main-section__title--with-bb Дорогие новостройки
					div.content__small-bar
						div.small-bar__content
							each item in cheapBuilding
								div.short-post.short-post--md-fs.short-post--xs-row
									div.short-post__poster.short-post__poster--small
										img(src=item.img)
									div.short-post__content
										a.short-post__string.short-post__head-link(href=item.href)=item.title
										p.short-post__string=item.adress
										p.short-post__string=item.price
